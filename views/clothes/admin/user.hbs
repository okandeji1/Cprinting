<section class="wrapper">
    <h3><i class="fa fa-angle-right"></i> Users</h3>
    <!-- row -->
    <div class="row mt">
        {{#if hasErrors}}
        <div class="alert alert-danger">
            {{#each messages}}
            <p>{{this}}</p>
            {{/each}}
        </div>
        {{/if}}
        {{#if success}}
        <div class="alert alert-success">
        </div>
        {{/if}}
        <div class="col-md-12">
            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">
                    <h4><i class="fa fa-angle-right"></i> Order Table</h4>
                    <hr>
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Modified</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each allUsers}}
                        <tr>
                            <td>{{Firstname}}</td>
                            <td>{{lastname}}</td>
                            <td>{{email}}</td>
                            <td>{{phone}}</td>
                            <td>
                                <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
                                <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /content-panel -->
        </div>
        <!-- /col-md-12 -->
    </div>
    <!-- /row -->
</section>